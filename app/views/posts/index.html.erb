<%= render partial: 'layouts/user_header', locals: { user: @user } %>
<div class="bg-primary text-white border border-primary border-3 rounded text-center my-2 py-1">All Posts</div>
<div>
  <% @posts.each do |post| %>
    <%= render partial: 'layouts/post_header', locals: { post: post , from: 'post/index' } %>
    <%= render partial: 'layouts/comments_list', locals: { comments: Post.last_five_comments(post.id) } %>
  <% end %>
</div>
